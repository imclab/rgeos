#!/bin/sh
if test -z "$GEOS_HOME" ; then
    GEOS_HOME="C:/work/packages/GEOS320"
fi
echo "GEOS_HOME=${GEOS_HOME}" > src/Makeconf.win

echo "using GEOS_HOME: ${GEOS_HOME}"

if test -z "$R_PACKAGE_DIR" ; then
  R_PACKAGE_DIR=${DPKG}
fi

mkdir "${R_PACKAGE_DIR}/libs"
cp ${GEOS_HOME}/bin/libgeos-3-2-0.dll "${R_PACKAGE_DIR}/libs"
cp ${GEOS_HOME}/bin/libgeos_c-1.dll "${R_PACKAGE_DIR}/libs"

